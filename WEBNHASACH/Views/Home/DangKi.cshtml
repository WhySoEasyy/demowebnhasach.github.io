
@model WEBNHASACH.Models.KHACHHANG
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Purple Admin</title>
    <link href="~/css/materialdesignicons.min.css" rel="stylesheet" />
    <link href="~/css/vendor.bundle.base.css" rel="stylesheet" />
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <!-- endinject -->
    <!-- Layout styles -->
    <link href="~/css/CssLogin.css" rel="stylesheet" />
    <!-- End layout styles -->
    <link rel="shortcut icon" href="../../img/favicon.ico" />
</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth">
                <div class="row flex-grow">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left p-5">
                            <h2 style="font-weight:bold; text-align:center">TẠO TÀI KHOẢN</h2>
                            @using (Html.BeginForm())
                            {
                @Html.AntiForgeryToken()
                                <form class="pt-3">
                                    <div class="form-group">
                                        @Html.EditorFor(model => model.HO, new { htmlAttributes = new { @class = "form-control form-control-lg ", @id = "exampleInputUsername1", @placeholder = "Họ" } })
                                    </div>
                                    <div class="form-group">
                                        @Html.EditorFor(model => model.TEN, new { htmlAttributes = new { @class = "form-control form-control-lg ", @id = "exampleInputUsername1", @placeholder = "Tên" } })
                                    </div>
                                    <div class="form-group">
                                        @Html.EditorFor(model => model.EMAIL, new { htmlAttributes = new { @class = "form-control form-control-lg ", @id = "exampleInputUsername1", @placeholder = "Email" } })
                                    </div>
                                    <div class="form-group">
                                        @Html.EditorFor(model => model.PASSWORD, new { htmlAttributes = new { @class = "form-control form-control-lg ", @id = "exampleInputUsername1", @placeholder = "Password" } })
                                    </div>
                                    <div class="mb-4">
                                    </div>
                                    @*<div class="mt-3">
                                            <a class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn" href="../../index.html">ĐĂNG KÍ</a>
                                        </div>*@
                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" value="ĐĂNG KÍ" class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn" />
                                        </div>
                                    </div>
                                    <div class="text-center mt-4 font-weight-light">
                                        Bạn đã có tài khoản? <a href="/Login/Login" class="text-primary">Đăng Nhập</a>
                                    </div>
                                </form>}
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <script src="~/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="~/js/off-canvas.js"></script>
    <script src="~/js/hoverable-collapse.js"></script>
    <script src="~/js/misc.js"></script>
    <!-- endinject -->
</body>
</html>
