
@model WEBNHASACH.Models.KHACHHANG
@{
    ViewBag.Title = "Login";
}


<!-- Pills navs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Đăng Nhập</title>
    <!-- plugins:css -->
    <link href="~/css/materialdesignicons.min.css" rel="stylesheet" />
    <link href="~/css/vendor.bundle.base.css" rel="stylesheet" />
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <!-- endinject -->
    <!-- Layout styles -->
    <link href="~/css/CssLogin.css" rel="stylesheet" />
    <!-- End layout styles -->
    <link rel="shortcut icon" href="../../img/favicon.ico" />
</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth">
                <div class="row flex-grow">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left p-5">
                            <div class="brand-logo">
                                <h2 style="font-weight: bold; text-align:center">LOGIN</h2>
                            </div>
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()
                                <form class="pt-3">
                                    <div class="form-group">
                                        @Html.EditorFor(model => model.TAIKHOAN, new { htmlAttributes = new { @class = "form-control form-control-lg ", @id = "exampleInputUsername1", @placeholder = "taikhoan" } })
                                    </div>
                                    <div class="form-group">
                                        @Html.EditorFor(model => model.MATKHAU, new { htmlAttributes = new { @class = "form-control form-control-lg ", @id = "exampleInputUsername1", @placeholder = "matkhau" } })
                                    </div>
                                    <div class="mt-3" style=" width:50%">
                                        <a class="" href="/Home/TrangChu">
                                            <input type="submit" value="Đăng Nhập" class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn" />
                                        </a>
                                    </div>
                                    <div class="my-2 d-flex justify-content-between align-items-center">
                                    </div>
                                    <div class="text-center mt-4 font-weight-light">
                                        Bạn không có tài khoản? <a href="/Home/DangKi" class="text-primary">Đăng Kí</a>
                                    </div>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="~/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="~/js/off-canvas.js"></script>
    <script src="~/js/hoverable-collapse.js"></script>
    <script src="~/js/misc.js"></script>
    <!-- endinject -->
</body>
</html>